- model_class = Admin
.page-header
  %h1= t '.title', :default => model_class.model_name.human.titleize
%dl.dl-horizontal
  %dt
    %strong
      = model_class.human_attribute_name(:email)
      \:
  %dd= @admin.email
  %dt
    %strong
      = model_class.human_attribute_name(:encrypted_password)
      \:
  %dd= @admin.encrypted_password
  %dt
    %strong
      = model_class.human_attribute_name(:current_sign_in_at)
      \:
  %dd= @admin.current_sign_in_at.strftime("%A, %d %B %Y")
  %dt
    %strong
      = model_class.human_attribute_name(:last_sign_in_at)
      \:
  %dd= @admin.last_sign_in_at.strftime("%A, %d %B %Y")
  %dt
    %strong
      = model_class.human_attribute_name(:current_sign_in_ip)
      \:
  %dd= @admin.current_sign_in_ip
  %dt
    %strong
      = model_class.human_attribute_name(:last_sign_in_ip)
      \:
  %dd= @admin.last_sign_in_ip
  %dt
    %strong
      = model_class.human_attribute_name(:created_at)
      \:
  %dd= @admin.created_at.strftime("%A, %d %B %Y")
.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), admin_admins_path, :class => 'btn'                       |
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_admin_admin_path(@admin), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), admin_admin_path(@admin), :method => 'delete', :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },:class => 'btn btn-danger'
