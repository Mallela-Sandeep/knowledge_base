- model_class = Admin
.page-header
  %h1= t '.title', :default => model_class.model_name.human.pluralize.titleize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:email)
      %th= model_class.human_attribute_name(:current_sign_in_at)
      %th= model_class.human_attribute_name(:last_sign_in_at)
      %th= model_class.human_attribute_name(:created_at)
      %th= t '.actions', :default => t("helpers.actions")
  %tbody
    - @admins.each do |admin|
      %tr
        %td= link_to admin.email, admin_admin_path(admin)
        %td= admin.current_sign_in_at.strftime("%A, %d %B %Y") unless admin.current_sign_in_at.blank?
        %td= admin.last_sign_in_at.strftime("%A, %d %B %Y") unless admin.last_sign_in_at.blank?
        %td= admin.created_at.strftime("%A, %d %B %Y")
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_admin_admin_path(admin), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), admin_admin_path(admin), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'                                                                         |
= will_paginate @admins
= link_to t('.new', :default => t("helpers.links.new")), |
  new_admin_admin_path,                                  |
  :class => 'btn btn-primary'                            |

